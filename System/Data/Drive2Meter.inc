[MeterName2]
Meter=String
MeasureName=MeasureDiskLabel2
MeterStyle=StyleSmallerText
X=(#SkinWidth#/2+#SkinPadding#)
Y=([MeterActivityLine:Y]+[MeterActivityLine:H]+10)
FontColor=#Drive2Color#
Text=#Drive2# (%1)
LeftMouseUpAction=#Drive2#\
DynamicVariables=1

[MeterActivity2]
Meter=String
MeasureName=MeasureDiskRate2Scalar
MeterStyle=StyleSmallerText
X=0r
Y=0R
ClipString=2
FontColor=#Drive2Color#
AutoScale=1k
Text=%1B/s
LeftMouseUpAction=#Drive2#\

[MeterSpace2]
Meter=String
MeasureName=MeasureDiskUnused2
MeasureName2=MeasureDiskTotal2
MeterStyle=StyleSmallerText
X=0r
Y=0R
AutoScale=1k
FontColor=#Drive2Color#
Text=%1B/%2B
LeftMouseUpAction=#Drive2#\

