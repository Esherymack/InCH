[MeterTotalDrive2]
MeasureName=MeasureDiskTotal2
Meter=Roundline
X=(125+[MeterName2:X])
Y=-15r
StartAngle=4.712
RotationAngle=6.283
LineLength=13
LineColor=#Drive2ColorBkg#
Solid=1
AntiAlias=1
LeftMouseUpAction=#Drive2#\

